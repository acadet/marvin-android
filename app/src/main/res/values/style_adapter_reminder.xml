<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AdapterReminder" parent="MatchParentWrapContent.Horizontal">
        <item name="android:padding">@dimen/layout_margin</item>

        <item name="android:background">@color/soft_background</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AdapterReminderCheckbox" parent="Material.Drawable.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/vertical_layout_margin</item>

        <item name="rbd_strokeColor">@color/white</item>
    </style>

    <style name="AdapterReminderLabel" parent="WrapContent">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/subhead</item>
    </style>
</resources>
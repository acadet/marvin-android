<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FragmentReminderListHeader" parent="MatchParentWrapContent.Horizontal">
        <item name="android:background">@color/dark_background</item>
    </style>

    <style name="FragmentReminderListHeaderSection">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>

        <item name="android:orientation">vertical</item>
    </style>

    <style name="FragmentReminderListHeaderSectionLabel" parent="MatchParentWrapContent">
        <item name="android:padding">10dp</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/body</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FragmentReminderListHeaderSectionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>

        <item name="android:background">@color/red</item>
    </style>

    <style name="FragmentReminderListHeaderBorder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>

        <item name="android:background">@drawable/header_border</item>
    </style>

    <style name="FragmentReminderListNoContent" parent="MatchParent">
        <item name="android:textColor">@color/dark_background</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>
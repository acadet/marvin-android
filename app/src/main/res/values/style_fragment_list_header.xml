<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FragmentListHeaderActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="FragmentListHeaderIcon">
        <item name="android:layout_width">@dimen/header_icon_size</item>
        <item name="android:layout_height">@dimen/header_icon_size</item>
        <item name="android:layout_margin">15dp</item>
    </style>

    <style name="FragmentListHeaderSection">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="FragmentListHeaderSectionLabel" parent="MatchParentWrapContent">
        <item name="android:padding">5dp</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/body</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FragmentListHeaderSectionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>

        <item name="android:background">@color/white</item>
    </style>
</resources>
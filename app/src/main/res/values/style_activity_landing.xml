<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LandingWrapper" parent="MatchParent.Vertical">
        <item name="android:background">@drawable/main_background</item>
    </style>

    <style name="LandingHeader" parent="MatchParentWrapContent.Vertical">
        <item name="android:background">@drawable/header_background</item>
    </style>

    <style name="LandingBody">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="LandingFooter" parent="MatchParentWrapContent">
        <item name="android:background">@drawable/footer_background</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/MatchParentWrapContent.Vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <LinearLayout
        style="@style/LandingHeader"
        >

        <RelativeLayout
            style="@style/MatchParentWrapContent"
            >

            <ImageView
                android:id="@+id/fragment_list_header_sort"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_sort"
                style="@style/FragmentListHeaderIcon"
                />

            <ImageView
                android:id="@+id/fragment_list_header_add"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_add"
                style="@style/FragmentListHeaderIcon"
                />

        </RelativeLayout>

        <LinearLayout
            style="@style/MatchParentWrapContent.Horizontal"
            >

            <LinearLayout
                android:id="@+id/fragment_list_header_active"
                style="@style/FragmentListHeaderSection"
                >

                <TextView
                    android:text="@string/active_list_label"
                    style="@style/FragmentListHeaderSectionLabel"
                    />

                <ImageView
                    android:id="@+id/fragment_list_header_active_bar"
                    style="@style/FragmentListHeaderSectionBar"
                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_list_header_completed"
                style="@style/FragmentListHeaderSection"
                >

                <TextView
                    android:id="@+id/fragment_list_header_completed_label"
                    android:text="@string/done_reminders_label"
                    style="@style/FragmentListHeaderSectionLabel"
                    />

                <ImageView
                    android:id="@+id/fragment_list_header_completed_bar"
                    android:visibility="invisible"
                    style="@style/FragmentListHeaderSectionBar"
                    tools:visibility="visible"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <ImageView
        style="@style/FragmentListHeaderBorder"
        />

</LinearLayout>